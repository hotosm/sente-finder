<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    android:id="@+id/custom_search_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="85%"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <SearchView
            android:id="@+id/fsp_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:theme="@style/AppTheme.SearchViewStyle"
            android:background="@drawable/searchview_border"
            android:queryHint="@string/search_fsps_hint"
            android:searchIcon="@drawable/ic_search_dark"
            android:queryBackground="@android:color/transparent"
            android:iconifiedByDefault="false" />

        <SearchView
            android:id="@+id/city_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:layout_below="@+id/fsp_search"
            android:theme="@style/AppTheme.SearchViewStyle"
            android:background="@drawable/searchview_border"
            android:queryHint="@string/search_cities_hint"
            android:searchIcon="@drawable/ic_location_dark"
            android:queryBackground="@android:color/transparent"
            android:iconifiedByDefault="false" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_widthPercent="15%"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/search_layout"
        android:src="@drawable/ic_action_search"
        android:background="@drawable/searchbutton_border"/>

</android.support.percent.PercentRelativeLayout>